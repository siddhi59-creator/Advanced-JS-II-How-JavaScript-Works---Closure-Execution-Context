

// Step 1: Declare a global variable
let age = 20;

// Step 2: Function that reads the global variable
function displayAge() {
  console.log("Current age is:", age);
}

// Step 3: Function that modifies the global variable
function changeAge() {
  age = 25; // updating the global variable
  console.log("Age updated inside function to:", age);
}

//  Function Calls// 

// Calling displayAge() → reads global value
displayAge();

// Calling changeAge() → modifies global value
changeAge();

// Calling displayAge() again to show updated value
displayAge();
